
<div class="container">
<p id="notice"><%  notice %></p>
      
<h1>List of Books</h1>


<br>



<table class="table table-striped table-hover table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>ID</th>
      <th>IBAN</th>
      <th>Name</th>
      <th>Author</th>
      <th>Year</th>
      <th>Publisher</th>
      <th>Category</th>
      <th>Language</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.id %></td>
        <td><%= book.iban %></td>
        <td><%= book.name %></td>
        <td><%= book.author %></td>
        <td><%= book.year %></td>
        <td><%= book.publisher %></td>
        <td><%= book.category %></td>
        <td><%= book.language %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Book', new_book_path, class:"btn btn-outline-dark" %>
<br>
</div>

